<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="roman.batygin@mail.ru" context="schema">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="roc_curve_data_entity"/>
            </not>
            <tableExists tableName="evaluation_results_info"/>
        </preConditions>
        <createTable tableName="roc_curve_data_entity">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="class_value" type="varchar(255)"/>
            <column name="evaluation_results_info_id" type="bigint">
                <constraints foreignKeyName="fk_roc_curve_data_entity_evaluation_results_info_id"
                             referencedTableName="evaluation_results_info" referencedColumnNames="id" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="roman.batygin@mail.ru" context="schema">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="roc_curve_point_entity"/>
            </not>
            <tableExists tableName="roc_curve_data_entity"/>
        </preConditions>
        <createTable tableName="roc_curve_point_entity">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="x_value" type="numeric(19,4)"/>
            <column name="y_value" type="numeric(19,4)"/>
            <column name="threshold_value" type="numeric(19,4)"/>
            <column name="roc_curve_data_id" type="bigint">
                <constraints foreignKeyName="fk_roc_curve_point_roc_curve_data_id"
                             referencedTableName="roc_curve_data_entity" referencedColumnNames="id" nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>